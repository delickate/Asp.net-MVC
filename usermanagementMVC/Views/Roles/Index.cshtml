@model IEnumerable<usermanagementMVC.Models.role>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Roles</h2>
<a href="@Url.Action("Create", "Roles")" class="btn btn-primary">Add</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.name</td>
                <td>
                    <a href="@Url.Action("Edit", "Roles", new { id = role.id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Roles", new { id = role.id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


